{
	"manifest_version": 3,
	"name": "Fake Job Detector",
	"version": "1.0",
	"description": "Detects potentially fraudulent job postings",
	"background": {
		"service_worker": "background/background.js"
	},
	"icons": {
	  "128": "icons/icon128.png"
	},
	"action": {
	  "default_popup": "popup/popup.html"
	},
	"content_scripts": [
	  {
		"matches": ["https://www.linkedin.com/jobs/*"],
		"js": ["content/content.js"],
		"run_at": "document_end"
	  }
	],
	"permissions": [
	  "activeTab",
	  "offscreen",
	  "scripting"
	],
	"host_permissions": [
	  "https://www.linkedin.com/*"
	],
	"content_security_policy": {
	  "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; worker-src 'self'; connect-src 'self';",
	  "sandbox": {
		"pages": ["sandbox/sandbox.html"],
		"content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; worker-src 'self'"
	}
	},
	"web_accessible_resources": [{
	  "resources": ["model.json", "group*.bin", "sandbox/sandbox.html"],
	  "matches": ["https://www.linkedin.com/*"]
	}]
  }